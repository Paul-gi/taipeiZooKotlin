<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/mBackBtn"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="?attr/colorPrimary"
            android:gravity="center_vertical"
            android:text="  Back"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/mToolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/mToolbar"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mToolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:layout_constraintLeft_toRightOf="@+id/mBackBtn"
            app:layout_constraintRight_toLeftOf="@+id/mChange"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/mChange"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="?attr/colorPrimary"
            android:gravity="center"
            android:text="@string/change"
            android:textSize="25sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mToolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/mToolbar"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>